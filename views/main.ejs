                        <td><%= aspirante.CELULAR %></td>
                        <td><%= aspirante.CORREO %></td>
                        <td><%= aspirante.FORMACION %></td>
                        <td><%= aspirante.EXPERIENCIA %></td>
                        <td>
                         <a href="/edit/<%= aspirante.ID %>" class="btn btn-outline-dark">Editar</a>
                        </p>
                         <a href="/delete/<%= aspirante.ID %>" class="btn btn-outline-danger">Eliminar</a>
                        </td>
                        
                    </tr>
                    <% }) %> 

